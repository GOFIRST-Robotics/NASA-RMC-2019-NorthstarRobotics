			<box size="${pseye_camera_length} ${pseye_camera_width} ${pseye_camera_height}"/>
		</geometry>
	</collision>
</link>

<!--Back right camera -->
	<joint name="camera1_joint" type="fixed">
		<axis xyz="0 1 0" />
		<origin xyz="${base_width/2} ${-base_length/2.0} ${base_height}" rpy="0 0 0"/>
		<parent link="base_link"/>
